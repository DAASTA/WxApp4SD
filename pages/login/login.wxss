/* pages/login/login.wxss */
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.buttons {
  display: flex;
  flex-direction: row;
  text-align: center;
}

.container{
  margin-top: 0px;
  display: flex;
  flex-direction: column;
  text-align: center;
  width: 100%;
  height: 180px;
  padding: 60rpx 0;
}

.avatar-container{
    position: relative;
    text-align: center;
    padding-top: 50%;
}


.avatar{
    width: 5rem;
    height: 5rem;
    background-color: #e5e5e5;
    border-radius: 50%;
}

.icon {
  width: 5rem;
  height: 5rem;
}

.item{
    line-height: 3rem;
}