  <text>我的图片</text>
  <image src="{{imageSelected}}" mode="aspectFit" style="width: 100%; height: 200px;"></image>
  <text>选择风格：</text>
  <radio-group class="radio-group" bindchange="radioChange">
    <block wx:for="{{styleNames}}" wx:for-index="index" wx:key="">
      <radio value="{{item.index}}" style="width: 33%;">{{item.name}}</radio>
    </block>
  </radio-group>
  <view class="imgList" style="width: 100%; height: 180px; display: flex; flex-direction: row; text-align: center; margin: auto;">
    <image src="../../images/preview/style0.jpg" mode="aspectFie" style="width: 33%; height: 140px;"></image>
    <image src="../../images/preview/style1.jpg" mode="aspectFie" style="width: 33%; height: 140px;"></image>
    <image src="../../images/preview/style2.jpg" mode="aspectFie" style="width: 33%; height: 140px;"></image>
  </view>
  <view class="buttongroup" style="width: 320px; margin: auto;">
    <button type="default" bindtap="gobackTap" size="default">返回编辑</button>
    <button type="default" disabled="{{!selectedRadio}}" bindtap="submit" size="default">确认提交</button>
  </view>
