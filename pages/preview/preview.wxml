<!--pages/preview/preview.wxml-->
<view class="content">
  <text>我的图片：</text>
  <image src="{{imageSelected}}" mode="aspectFit" style="width: 100%; height: 200px;"></image>
  <text>选择变换风格：</text>
  <radio-group class="radio-group" bindchange="radioChange">
    <block wx:for="{{styleNames}}" wx:for-index="index" wx:key="">
      <radio value="{{item.index}}" style="width: 33%;">{{item.name}}</radio>
    </block>
  </radio-group>
  <view class="imgList" style="width: 100%; display: flex; flex-direction: row; text-align: center; margin: auto;">
    <image src="../../images/preview/style0.jpg" mode="aspectFit" class="thumbnail"></image>
    <image src="../../images/preview/style1.jpg" mode="aspectFit" class="thumbnail"></image>
    <image src="../../images/preview/style2.jpg" mode="aspectFit" class="thumbnail"></image>
  </view>
  <view class="buttongroup">
    <button class="weui-btn button" type="default" bindtap="gobackTap" style="width: 50%;">返回编辑</button>
    <button class="weui-btn button" type="primary" disabled="{{!selectedRadio}}" bindtap="submit" style="width: 50%;">确认提交</button>
  </view>
</view>
